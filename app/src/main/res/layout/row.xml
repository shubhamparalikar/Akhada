<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:background="@drawable/patternblue"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/row1layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/schedulecard"
            android:layout_width="0dp"
            android:layout_weight="1"
          android:layout_margin="2dp"
            android:layout_height="130dp"
            android:onClick="openSchedule">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dumbell"
                android:elevation="0dp">

                <TextView
                    android:text="YOUR SCHEDULE:"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView"
                    android:textStyle="normal|bold"
                    android:textAlignment="gravity"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/patternbg"
                    android:layout_height="25dp"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="See and customize your daily gym schedule here.."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView2"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="12sp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/diettipscard"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:onClick="openDietTips">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dumbell"
                android:elevation="0dp">

                <TextView
                    android:text="TIPS:"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView3"
                    android:textStyle="normal|bold"
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/patternbg"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="Read all the diet related tips that you should remember for losing or gaining weight."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView5"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:fontFamily="serif"
                    android:textSize="12sp" />
            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/row2layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardiotipscard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="130dp"
            android:background="@color/cardview_dark_background"
            app:cardBackgroundColor="?attr/colorControlNormal"
            android:onClick="openCardio">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dumbell"
                android:elevation="0dp">

                <TextView
                    android:text="TIPS:"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView6"
                    android:textStyle="normal|bold"
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/patternbg"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="Why should you do cardio? \n when should you do cardio?\n click here to read.."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView8"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dosndontscard"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            app:cardBackgroundColor="?attr/colorControlNormal"
            android:onClick="openDosDonts">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dumbell"
                android:elevation="0dp">

                <TextView
                    android:text="DOS n DONTS"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView7"
                    android:textStyle="normal|bold"
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/patternbg"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="Common gym etiquette that\n everyone should follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView9"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />
            </RelativeLayout>



        </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/row3layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/gallerycard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="130dp"
            app:cardBackgroundColor="?attr/colorControlNormal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dumbell"
                android:elevation="0dp">

                <TextView
                    android:text="GALLERY:"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView10"
                    android:textStyle="normal|bold"
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/patternbg"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="coming soon.."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="serif"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textAlignment="center" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/tutorialscard"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            app:cardBackgroundColor="?attr/colorControlNormal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dumbell"
                android:elevation="0dp">

                <TextView
                    android:text="TUTORIALS:"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView11"
                    android:textStyle="normal|bold"
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/patternbg"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="coming soon.."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView11"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView13"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textAlignment="center" />
            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>

</ScrollView>